<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="en">
<head>
  <%- include('../../components/head')  %>  
</head>
<body class="hold-transition sidebar-mini">
<div class="wrapper">

  <!-- Navbar -->
  <%- include('../../components/navbarr')  %>  
  <!-- /.navbar -->
  <!-- Main Sidebar Container -->
  <%- include('../../components/main-side-bar')  %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <%- include('../../components/Content-header')  %>

    <!-- /.content-header -->

    <!-- Main content -->
<!-- هادي هيا المساحة المتغيرة اما باقي الثوابت عملنا الها انكلود  -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <!-- left column -->
      <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">Add Admin...</h3>
          </div>
          <!-- /.card-header -->
          <!-- form start -->
          <form  method="post" enctype="application/x-www-form-urlencoded"  action="/admin">
            <div class="card-body">
              <% if(locals.errors) { %> 
                <div class="alert alert-danger alert-dismissible">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                  <h5><i class="icon fas fa-ban"></i> Alert!</h5>
                  <ul>
                    <!-- لوكال عشان نطلع من دائرة الانديفايند -->
                  <% for(error of locals.errors) { %> 
                  <li><%=error.msg %></li>
                    <% }%>
                  </ul>           
                </div>
                <% }%>
                <!-- الشغل هادا نقلتو على واجهة العرض تبعت الاوول  -->
                <% if(locals.message) { %> 
                  <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h5><i class="icon fas fa-check"></i> Alert!</h5>
                    <!-- <ul>
                    <% for(error of locals.message) { %> عليهم تعليق 
                    <li><%=error %></li>
                      <% }%>
                    </ul> -->
                    <%=locals.message %>
                  </div>
                  <% }%> 

              <div class="form-group">
                <label for="FirstNameInput">First Name</label>
                <input type="text" class="form-control" id="FirstNameInput" placeholder="Enter First Name" name="firstName" value="<%= locals.old?.firstName%>">
              </div>
              <div class="form-group">
                <label for="LastNameInput">Last Name</label>
                <input type="text" class="form-control" id="LastNameInput" placeholder="Enter Last Name" name="lastName" value="<%= locals.old?.lastName %>" >
              </div>           
              <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email" name="email" value="<%= locals.old?.email %>" >
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
              </div>
              
              <div class="form-group">
                <label for="exampleInputPassword1">Gender</label>
                <div class="form-check">
                  <input class="form-check-input" type="radio"  name="gender" value="M"
                    <% if(locals.old?.gender==="M" ) { %>  
                    checked
                    <% } %>
                    />
                  <label class="form-check-label">Male</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="gender" value="F"
                  <% if(locals.old?.gender==="F" ) { %>  
                    checked
                    <% } %>
                  >
                  <label class="form-check-label">Female</label>
                </div>
                
              </div>

            </div>
            <!-- /.card-body -->

            <div class="card-footer">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
        <!-- /.card -->


      </div>
      <!--/.col (left) -->
     


    </div>
    <!-- /.row -->
  </div><!-- /.container-fluid -->
</section>



    <!-- blade yields and sections in laravel زي الوراثة في الاي جي اس يعني تعويض -->
    
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!-- Control Sidebar -->
<!-- السايد بار مش لازمة  -->

  <!-- /.control-sidebar -->

  <!-- Main Footer -->
   
  <%- include('../../components/footerr')  %>
  
</div>
<!-- ./wrapper -->

<!-- REQUIRED SCRIPTS -->

<!-- Scripts -->

<%- include('../../components/Scripts')  %>

</body>
</html>
